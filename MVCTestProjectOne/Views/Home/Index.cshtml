@model UserModel

<div class="wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-box text-center">
                    <h4 class="mb-0">@Model.Name</h4>

                    <div class="text-left mt-3">
                        <h4 class="font-13 text-uppercase">About Me :</h4>

                        <p class="text-muted mb-2 font-13">
                            <strong>Full Name :</strong> <span class="ml-2">
                                @Model.Name
                            </span>
                        </p>

                        <p class="text-muted mb-2 font-13">
                            <strong>UserName :</strong><span class="ml-2">
                                @Model.UserName
                            </span>
                        </p>

                        <p class="text-muted mb-2 font-13"><strong>Email :</strong> <span class="ml-2 ">@Model.Email</span></p>

                        <p class="text-muted mb-1 font-13"><strong>Website :</strong> <span class="ml-2">@Model.Website</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @foreach (PostModel post in Model.Posts)
    {
        <div id="post-@post.Id" class="row">
            <div class="col-lg-12">
                <div class="card-box">
                    <div class="border border-light p-2 mb-3">

                        <div class="media">
                            <div class="media-body">
                                <h5 class="m-0">@post.Title</h5>
                            </div>
                        </div>


                        <div class="font-16 text-center font-italic text-dark">
                            <i class="mdi mdi-format-quote-open font-20"></i>
                            @post.Body
                            <i class="mdi mdi-format-quote-close font-20"></i>
                        </div>

                        <div class="mt-2">
                            <a href="#" onclick="comments.like(this); return false;" class="btn btn-sm btn-link text-danger">
                                <i class="mdi mdi-heart-outline"></i> Like <span class="like-number"></span>
                            </a>
                        </div>

                        <div class="card-box">
                            <div>
                                <h5>Comments</h5>
                            </div>
                            <div class="js-comments-container">
                                @foreach (CommentModel comment in post.Comments)
                                {
                                    <div class="border border-light p-2 mb-3">
                                        <div class="media">
                                            <div class="media-body">
                                                <h5 class="m-0">@comment.Name</h5>
                                            </div>
                                        </div>
                                        <p class="comment">@comment.Body</p>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="media mt-2">
                            <a class="pr-2" href="#">
                                <img src="assets/images/users/user-1.jpg" class="rounded-circle"
                                     alt="Generic placeholder image" height="31">
                            </a>
                            <div class="media-body">
                                <input type="text" class="form-control border-0 form-control-md" placeholder="Add comment" />
                                <span class="js-error-message text-danger" style="display: none;">Please enter a comment</span>
                                <button type="button" class="btn-block mt-1 btn btn-outline-dark waves-effect waves-light" onclick="comments.addComment(@post.Id)" >Submit</button>
                            </div>
                        </div>
                    </div>

                   
                </div>
            </div> <!-- end card-deck-->
        </div> <!-- end card-deck-wrapper-->
    }
</div>
<!-- end col-->

<!-- End Page content -->
<!-- ============================================================== -->
