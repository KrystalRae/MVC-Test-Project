<footer class="footer">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                2019 &copy; <a class="textGreen">Krystal Randall</a>
            </div>
        </div>
    </div>
</footer>
<!-- end Footer -->
   
